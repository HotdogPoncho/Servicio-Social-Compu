<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".Registro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtNumTrab"
                android:layout_width="270dp"
                android:layout_height="41dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="NÃºmero de Trabajador"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/custom_icon_baseline_bagde" />

            <EditText
                android:id="@+id/txtApellidos"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="68dp"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/custom_icon_baseline_person" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="68dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/custom_icon_baseline_person"/>

            <Spinner
                android:id="@+id/lstArea"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="68dp" />

            <Spinner
                android:id="@+id/lstColegio"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="68dp"/>

            <Button
                android:id="@+id/cmdActualizar"
                android:layout_width="219dp"
                android:layout_height="48dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/button_rounded"
                android:onClick="ActualizarDatos"
                android:text="Actualizar"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/cmdSalir"
                android:layout_width="219dp"
                android:layout_height="48dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/button_rounded_border"
                android:onClick="Salir"
                android:text="Salir"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>