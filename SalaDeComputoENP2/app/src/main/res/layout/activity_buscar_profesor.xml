<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".BuscarProfesor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="309dp"
                android:layout_height="118dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="28dp"
                tools:ignore="MissingConstraints">

                <RadioButton
                    android:id="@+id/optNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numero De Trabajador"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/optNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/optApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Apellidos"
                    android:textColor="#FFFFFF" />

            </RadioGroup>

            <EditText
                android:id="@+id/txtBuscar"
                android:layout_width="250dp"
                android:layout_height="41dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/cmdBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="30dp"
                android:onClick="verVisitas"
                android:text="Buscar" />

            <ListView
                android:id="@+id/lstvwProfesores"
                android:layout_width="314dp"
                android:layout_height="380dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="45dp"
                android:background="#FAFAFA"
                android:cacheColorHint="#FFFFFF" />

            <Button
                android:id="@+id/cmdModificar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:onClick="mandarDatos"
                android:text="Modificar" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

