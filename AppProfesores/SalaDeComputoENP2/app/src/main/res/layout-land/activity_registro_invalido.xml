<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".RegistroInvalido">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-165dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="282dp"
                android:layout_height="130dp"
                android:layout_marginStart="224dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="225dp"
                android:src="@drawable/registro_invalido"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Registro"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="REGISTRO INVÃLIDO"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="353dp"
                android:layout_height="80dp"
                android:layout_marginStart="189dp"
                android:layout_marginEnd="189dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="REGISTRE SU NUMERO DE TRABAJADOR"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/cmdSalir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/cmdSalir"
                android:layout_width="271dp"
                android:layout_height="48dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="94dp"
                android:layout_marginEnd="230dp"
                android:background="@drawable/button_rounded"
                android:onClick="Registrarse"
                android:text="Registrarse"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Registro" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>