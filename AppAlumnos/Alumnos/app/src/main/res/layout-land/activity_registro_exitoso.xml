<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".RegistroExitoso">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="86dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView2"
                android:layout_width="282dp"
                android:layout_height="130dp"
                android:layout_marginStart="224dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="225dp"
                android:src="@drawable/registro_exitoso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Registro"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="231dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="231dp"
                android:text="@string/registro_exitoso"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gifImageView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="353dp"
                android:layout_height="80dp"
                android:layout_marginStart="189dp"
                android:layout_marginEnd="189dp"
                android:text="@string/puede_cerrar_la_aplicacion"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Registro" />

            <Button
                android:id="@+id/cmdSalir"
                android:layout_width="271dp"
                android:layout_height="48dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="230dp"
                android:background="@drawable/button_rounded"
                android:text="@string/salir"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="TextContrastCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>